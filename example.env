# ==============================================
# Astrological Insight Generator Configuration
# ==============================================

# ----------------
# Cohere API Configuration (REQUIRED)
# ----------------
# Get your API key from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=i0OrIBaeHu9TcImEox1VJoP8S3Cchf5RPtOxSGcU

# Cohere LLM Model
# Default: command-r-08-2024
# Options: command-r-08-2024, command-r-plus, command-r
COHERE_MODEL=command-r-08-2024

# LLM Generation Parameters
# Temperature controls randomness (0.0 = deterministic, 1.0 = creative)
COHERE_TEMPERATURE=0.7

# Maximum tokens to generate per insight
COHERE_MAX_TOKENS=200

# ----------------
# Cohere Embedding Configuration
# ----------------
# Embedding model for vector search
# Default: embed-english-v3.0
# Options: embed-english-v3.0, embed-english-light-v3.0, embed-multilingual-v3.0
COHERE_EMBEDDING_MODEL=embed-english-v3.0

# Embedding input type
# Default: search_document
# Options: search_document, search_query, classification, clustering
EMBEDDING_INPUT_TYPE=search_document

# ----------------
# Vector Store Configuration
# ----------------
# Enable/disable FAISS vector store for context retrieval
# Default: true
VECTOR_STORE_ENABLED=false

# Number of top results to retrieve from vector store
# Default: 3
TOP_K_RESULTS=3

# ----------------
# Translation Configuration
# ----------------
# Enable/disable translation service
# Default: true
TRANSLATION_ENABLED=false

# ----------------
# Application Settings
# ----------------
# Enable debug mode (verbose logging)
# Default: false
DEBUG=false